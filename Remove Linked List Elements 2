/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        if (head==NULL) return NULL;
        while(head->val==val){
            head=head->next;
            if (head==NULL) return NULL;
        }

        ListNode * first = head;
        ListNode * second = head->next;

        while(second!=NULL) {
            if(second->val == val){
                first->next = second->next;
                second = second->next;
            }
            else {
                first = second;
                second = second->next;
            }
        }
        return head;
    }
};
